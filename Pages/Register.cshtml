@page
@model Bibliosharp.Pages.Register
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form class="container register-container">
        <div class="mb-2">
            <label for="name" class="form-label">First Name</label>
            <input type="text" class="form-control" id="name">
        </div>
        <div class="mb-2">
            <label for="Sname" class="form-label">Second Name</label>
            <input type="text" class="form-control" id="Sname">
        </div>
        <div class="mb-2">
            <label for="FLname" class="form-label">First Last Name</label>
            <input type="text" class="form-control" id="FLname">
        </div>
        <div class="mb-2">
            <label for="SLname" class="form-label">Second Last Name</label>
            <input type="text" class="form-control" id="SLname">
        </div>
         <div class="mb-2">
            <label for="rol" class="form-label">Rol</label>
            <input type="text" class="form-control" id="rol">
        </div>
        <div class="mb-2">
            <label for="DType" class="form-label">Document Type</label>
            <input type="text" class="form-control" id="DType">
        </div>
        <div class="mb-2">
            <label for="DNumber" class="form-label">Document Number</label>
            <input type="number" class="form-control" id="DNumber">
        </div>
        <div class="mb-2">
            <label for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" id="Address">
        </div>
        <div class="mb-2">
            <label for="Phone" class="form-label">Phone</label>
            <input type="number" class="form-control" id="Phone">
        </div>
         <div class="mb-2">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email">
        </div>
        <div class="mb-2">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-2 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Al registrarme acepto terminos y condiciones</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>